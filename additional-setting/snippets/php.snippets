# if
snippet if
	if (${1:/* condition */})
	{
		${2:// code...}
	}
	${3}

# nonation
snippet /*
	/*
	* ${1:nonation}
	*/

# Debug
### echo 
snippet qq
	echo 'qq';
snippet cc
	echo 'cc';
snippet dd
	echo 'dd';
snippet tt
	echo 'tt';
snippet var
	var_dump(${1:variable});${2}
snippet br
	'<br />'
snippet pre
	echo '<pre>';print_r(${1:/* Variable */});echo '<pre>';${2}
-------------------------------
### log_message
snippet log
	log_message('info', ${1:/* Log message  */});${2}
snippet logjson
	log_message('info', json_encode(${1:/* variable */}, JSON_UNESCAPED_UNICODE));${2}
snippet logqq
	log_message('info', 'qq');
snippet logcc
	log_message('info', 'cc');
snippet logdd
	log_message('info', 'dd');
snippet logtt
	log_message('info', 'tt');
